<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    
    android:background="#000" >
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="180dip" >
 
        <TextView
            android:id="@+id/tv_calc_sum"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#fff"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip" >
        </TextView>
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip" >
 
        <Button
            android:id="@+id/btn_calc_07"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="7" />
 
        <Button
            android:id="@+id/btn_calc_08"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="8" />
 
        <Button
            android:id="@+id/btn_calc_09"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="9" />
 
        <Button
            android:id="@+id/btn_calc_jia"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
 
        <Button
            android:id="@+id/btn_calc_04"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="4" />
 
        <Button
            android:id="@+id/btn_calc_05"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="5" />
 
        <Button
            android:id="@+id/btn_calc_06"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="6" />
 
        <Button
            android:id="@+id/btn_calc_jian"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="-" />
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
 
        <Button
            android:id="@+id/btn_calc_01"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="1" />
 
        <Button
            android:id="@+id/btn_calc_02"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="2" />
 
        <Button
            android:id="@+id/btn_calc_03"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="3" />
 
        <Button
            android:id="@+id/btn_calc_cheng"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="*" />
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
 
        <Button
            android:id="@+id/btn_calc_00"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="0" />
 
        <Button
            android:id="@+id/btn_calc_c"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="C" />
 
        <Button
            android:id="@+id/btn_calc_dengyu"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="=" />
 
        <Button
            android:id="@+id/btn_calc_chu"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="/" />
    </LinearLayout>
 
</LinearLayout>